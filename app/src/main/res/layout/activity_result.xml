<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E5E5E5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity" >

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <LinearLayout
            android:background="#FF018786"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/backBtn"
                android:src="@drawable/ic_baseline_menu_24"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_40"
                app:lottie_fileName="menu.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PlantR"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/res1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="91dp"
        android:gravity="center"
        android:text="Your Result is here"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mResultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res1"
        android:gravity="center"
        android:text="Result"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <WebView

        android:id="@+id/browser"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/id"
        android:layout_below="@+id/mResultTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="#E5E5E5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#FF018786"
        android:orientation="horizontal">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/home"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="home2.json"
            app:lottie_loop="true" />

        <com.airbnb.lottie.LottieAnimationView

            android:id="@+id/mCameraButton"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="camera.json"
            app:lottie_loop="true" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/mGalleryButton"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="image.json"
            app:lottie_loop="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/user"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="user.json"
            app:lottie_loop="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/webview"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="youtubes.json"
            app:lottie_loop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:background="#FF018786"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>

