<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E5E5E5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <LinearLayout
            android:background="#50C2C9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/backBtn"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:lottie_fileName="menu.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PlanteR"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card1"
        app:lottie_autoPlay="true"
        app:lottie_fileName="wind.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_marginLeft="@dimen/dp_50"
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="weather" />



    <com.airbnb.lottie.LottieAnimationView

        android:id="@+id/mDetectButton"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/mResultTextView"
        android:layout_centerVertical="true"
        android:text="buttonDiagnose"
        app:lottie_autoPlay="true"
        app:lottie_fileName="start.json"
        app:lottie_loop="true" />


    <TextView
        android:id="@+id/mResultTextView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/mPhotoImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"


        android:layout_marginEnd="11dp"
        android:layout_marginBottom="17dp"
        android:text="defaultImage"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView

        android:id="@+id/card"
        android:layout_below="@+id/mPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#50C2C9"
        android:orientation="horizontal">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/home"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="home2.json"
            app:lottie_loop="true" />

        <com.airbnb.lottie.LottieAnimationView

            android:id="@+id/mCameraButton"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="camera.json"
            app:lottie_loop="true" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/mGalleryButton"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="image.json"
            app:lottie_loop="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/user"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="user.json"
            app:lottie_loop="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/webview"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="#50C2C9"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="youtube.json"
            app:lottie_loop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>

